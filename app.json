{
  "expo": {
    "name": "expoTemplate",
    "slug": "expoTemplate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "usesAppleSignIn": true,
      "supportsTablet": true,
      "bundleIdentifier": "com.kapernikrs.expoTemplate",
      "buildNumber": "30",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photo library so you can upload images to your profile and events.",
        "NSCameraUsageDescription": "We need access to your camera so you can take photos directly in the app.",
        "NSLocationWhenInUseUsageDescription": "We need access to your location to show events near you.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.kapernikrs.expoTemplate"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#6f2da8"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.728122372039-a6jj9godm62p3o7vov8f7q5psjfppiu7"
        }
      ],
      "expo-apple-authentication",
      "expo-notifications"
    ]
  }
}
